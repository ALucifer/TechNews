<!--menu mobile-->
<nav class="menu-res hidden-lg hidden-md ">
    <div class="menu-res-inner">
        <ul>
            <li {% if(active == 'index') %}class="current"{%endif%}>
                <a href="{{ url('index') }}">HOME</a>
            </li>
            {% for category in categories %}
                <li {% if(active == category.libelle) %}class="current"{%endif%}>
                    <a  href="{{ url('index_category', {'libelle': category.libelle | slugify}) }}">{{ category.libelle }}</a>
                </li>
            {% endfor %}
            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                <li><a href="{{ url('deconnexion') }}">Déconnexion</a></li>
            {% else %}
                <li><a href="{{ url('security_connexion') }}">Connexion</a></li>
                <li><a href="{{ url('security_register') }}">Inscription</a></li>
            {% endif %}
        </ul>
    </div>
</nav>
<div class="page">
    <div class="container">
        <!--header-->
        <header class="header">
            <div class="row">
                <div class="col-md-3 col-sm-4 col-xs-12">
                    <a href="{{ url('index') }}" class="logo">
                        <img alt="Logo" src="{{ asset('images/logo.png') }}" />
                    </a>
                </div>
            </div>
        </header>
        <!--menu-->
        <nav class="menu font-heading">
            <div class="menu-icon hidden-lg hidden-md">
                <i class="fa fa-navicon"></i>
                <span>MENU</span>
            </div>

            <ul class="hidden-sm hidden-xs">
                <li {% if(active == 'index') %}class="current"{%endif%}>
                    <a href="{{ url('index') }}">Accueil </a>
                </li>
                {% for category in categories %}
                    <li {% if(active == category.libelle) %}class="current"{%endif%}>
                        <a href="{{ url('index_category', {'libelle': category.libelle | slugify}) }}">{{ category.libelle }}</a>
                    </li>
                {% endfor %}
                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    <li><a href="{{ url('deconnexion') }}">Déconnexion</a></li>

                {% else %}
                    <li><a href="{{ url('security_connexion') }}">Connexion</a></li>
